{
  "name": "match-breakpoint",
  "version": "1.0.0-canary.1",
  "description": "A library of optimized React components and hooks for matching screen widths",
  "license": "MIT",
  "author": "Oleg Putseiko <oleg.putseiko@gmail.com> (https://github.com/oleg-putseiko)",
  "keywords": [
    "react",
    "typescript",
    "breakpoint",
    "media-query",
    "match-media",
    "performance",
    "tailwindcss"
  ],
  "homepage": "https://github.com/oleg-putseiko/match-breakpoint",
  "repository": {
    "type": "git",
    "url": "https://github.com/oleg-putseiko/match-breakpoint"
  },
  "bugs": {
    "url": "https://github.com/oleg-putseiko/match-breakpoint/issues"
  },
  "main": "dist/index.js",
  "files": [
    "dist/components/**/*.d.ts",
    "dist/components/**/*.js",
    "dist/types/**/*.d.ts",
    "dist/utils/**/*.d.ts",
    "dist/utils/**/*.js",
    "dist/index.d.ts",
    "dist/index.js"
  ],
  "exports": "./dist/index.js",
  "scripts": {
    "build": "swc src -d dist --strip-leading-paths && tsc --emitDeclarationOnly && tsc-alias",
    "format": "prettier -c .",
    "format:fix": "prettier -w .",
    "lint": "eslint ./src/**/*.{js,ts,tsx,json}",
    "lint:fix": "eslint ./src/**/*.{js,ts,tsx,json} --fix && yarn format:fix",
    "lint:strict": "eslint ./src/**/*.{js,ts,tsx,json} --max-warnings=0 && yarn format",
    "prepare": "husky install | chmod +x ./.husky/*",
    "typecheck": "tsc --noEmit --incremental false"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0",
    "tailwindcss": ">=3.2.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.9.3",
    "@types/react": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-woofmeow": "^1.0.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "tsc-alias": "^1.8.10",
    "typescript": "~5.2.2"
  },
  "engines": {
    "node": ">=18.18.0",
    "yarn": "^3.6.4"
  },
  "volta": {
    "node": "18.18.0",
    "yarn": "3.6.4"
  },
  "packageManager": "yarn@3.6.4"
}
