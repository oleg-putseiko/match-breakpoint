{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "ES6",
    "moduleResolution": "node",
    "outDir": "dist/src",
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDir": "./",
    "strict": true,
    "stripInternal": true,
    "target": "ES2015"
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
